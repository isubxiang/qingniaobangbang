@import "../../../wuBaseWxss/1.wxss";

.header .list {
    background: #fff;
}

.header .list .caption .iconfont {
    color: #06c1ae;
    width: 60rpx;
    height: 100rpx;
    display: inline-block;
    font-size: 30rpx;
}

.header .list .row .value {
    font-size: 32rpx;
}

.header .list .row input {
    width: auto;
}

.header .btns {
    padding: 40rpx 40rpx 40rpx 40rpx;
}

.header .btns button {
    border-radius: 10rpx;
}

.header .btns button[disabled] {
    background: #d0d0d0;
    color: #f7f7f7;
}

.body {
    background: #fff;
}

.body .section {
    height: 58rpx;
    line-height: 58rpx;
    color: #aaa;
    padding-left: 28rpx;
    background: #f0f0f0;
}

.body .item {
    display: flex;
    padding: 20rpx 40rpx;
}

.body .item .empty {
    text-align: center;
    padding: 20rpx 0;
    color: #888;
    width: 100%;
}

.body .item .left {
    flex: 1;
    color: #aaa;
    font-size: 26rpx;
}

.body .item .name {
    font-size: 28rpx;
    line-height: 48rpx;
    color: #222;
    margin-bottom: 8rpx;
}

.body .item .money {
    text-align: center;
    font-size: 40rpx;
    width: 120rpx;
    margin-top: 18rpx;
}

.modal-content {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.modal-content text {
    padding: 10rpx 0;
}