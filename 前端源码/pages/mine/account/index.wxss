@import "../../../wuBaseWxss/1.wxss";

.header {
    height: 260rpx;
}

.header-bg {
    background: #06c1ae;
    height: 205rpx;
    position: relative;
}

.header-bg .balance {
    display: flex;
    justify-content: center;
    height: 106rpx;
    line-height: 106rpx;
}

.header-bg .balance view {
    position: relative;
    font-size: 84rpx;
    color: #fff;
    font-weight: 700;
}

.header-bg .balance .more {
    position: absolute;
    color: rgba(255,255,255,0.7);
    font-size: 26rpx;
    font-weight: 400;
    top: 40rpx;
    right: -140rpx;
    width: 100rpx;
    text-align: center;
    height: 44rpx;
    line-height: 44rpx;
    border: 1rpx solid #b1e4d1;
    border-radius: 8rpx;
}

.header-bg .balance .more text {
    font-size: 20rpx;
    margin-left: 8rpx;
}

.header-bg .month {
    margin-top: 20rpx;
    left: 30rpx;
    right: 30rpx;
    position: absolute;
    z-index: 2;
    background: #fff;
    border-radius: 18rpx;
    padding: 30rpx;
    display: flex;
}

.header-bg .month .item {
    flex: 1;
    text-align: center;
}

.header-bg .month .item view {
    color: #aaa;
    font-size: 24rpx;
    margin-bottom: 10rpx;
}

.header-bg .month .item text {
    font-size: 32rpx;
}

.header-bg .month .outgo {
    border-right: 1px solid #f0f0f0;
}

.header-bg .month navigator {
    position: absolute;
    z-index: 3;
    right: 10rpx;
    top: -80rpx;
    color: rgba(255,255,255,0.6);
    font-size: 26rpx;
}

.header-bg .month navigator text {
    font-size: 20rpx;
    margin-left: 8rpx;
}

.body {
    display: flex;
    flex-direction: column;
    align-items: left;
}

.body .item-dot {
    width: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    left:100rpx;

}

.body .item-dot text {
    width: 18rpx;
    height: 18rpx;
    border-radius: 9rpx;
    display: block;
}

.body .first {
    margin-top: 100rpx;
    margin-bottom: 50rpx;
}

.body .first text {
    background: #06c1ae;
}

.body .first navigator {
    position: absolute;
    z-index: 2;
    left: 110rpx;
    top: -54rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    background: #f5d6a8;
    color: #fff;
    width: 240rpx;
    font-size: 24rpx;
}

.body .last {
    margin-bottom: 80rpx;
}

.body .last text {
    background: #aaa;
    font-size: 26rpx;
}

.body .last view {
    position: absolute;
    z-index: 2;
    margin-top: 40rpx;
    color: #aaa;
    width: 280rpx;
    text-align: center;
    left:100rpx;
}

.body .line {
    height: 60rpx;
    width: 0;
    border-left: 1rpx solid #06c1ae;
}

.body .item {
    display: flex;
    flex-direction: column;
    align-items: left;
    position: relative;
}

.body .item navigator {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.body .item image {
    width: 100%;
    height: 100%;
    background: #ddd;
    border-radius: 50rpx;
}

.body .item .detail {
    z-index: 2;
    padding: 20rpx;
    top: -14rpx;
}

.body .item .detail view {
    display: flex;
    justify-content: flex-end;
}

.body .item .detail .type {
    background: #06c1ae;
    padding: 4rpx 14rpx;
    border-radius: 8rpx;
    color: #fff;
    margin: 0 16rpx;
    font-size: 26rpx;
}

.body .item .detail .money {
    font-size: 30rpx;
}

.body .item .detail .time {
    color: #aaa;
    margin-top: 10rpx;
    display: block;
    font-size: 24rpx;
}

.body .item .detail .time .iconfont {
    margin-right: 6rpx;
    font-size: 26rpx;
    font-weight: 700;
}

.body .item .detail-out {
    right: 110rpx;
    padding-right: 10rpx;
}

.body .item .detail-in {
    left: 110rpx;
    padding-left: 10rpx;
}

.body .item .detail-in view {
    flex-direction: row-reverse;
}