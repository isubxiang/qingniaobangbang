@import "../../../wuBaseWxss/1.wxss";

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    position: relative;
    background: #fff;
}

.header .rule {
    color: #fff;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 170rpx;
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 22rpx;
    background: #aaa;
    text-align: center;
    font-size: 26rpx;
}

.header .rule .iconfont {
    font-size: 26rpx;
    margin-left: 10rpx;
}

.header .circle {
    width: 400rpx;
    height: 400rpx;
    margin: 40rpx 0;
    position: relative;
}

.header .value {
    border: 30rpx solid #06c1ae;
    box-shadow: 0 0 20px #06c1ae;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    box-sizing: border-box;
    opacity: 0.8;
}

.header .money-ge {
    border: 30rpx solid #06c1ae;
    border-radius: 50%;
    line-height: 280rpx;
    text-align: center;
    color: #06c1ae;
    font-size: 60rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
    right: 30rpx;
    bottom: 30rpx;
}

.header button {
    border: 2rpx solid #06c1ae;
    background: #fff;
    color: #06c1ae;
    font-size: 30rpx;
    padding: 0 50rpx;
}

.body {
    background: #fff;
}

.body .section {
    height: 58rpx;
    line-height: 58rpx;
    color: #aaa;
    padding-left: 28rpx;
    background: #f0f0f0;
}

.body .item {
    display: flex;
    padding: 20rpx 40rpx;
}

.body .item .empty {
    text-align: center;
    padding: 20rpx 0;
    color: #888;
    width: 100%;
}

.body .item .left {
    flex: 1;
    color: #aaa;
    font-size: 26rpx;
}

.body .item .name {
    font-size: 28rpx;
    line-height: 48rpx;
    color: #222;
    margin-bottom: 8rpx;
}

.body .item .money {
    text-align: center;
    font-size: 40rpx;
    width: 120rpx;
    margin-top: 18rpx;
}