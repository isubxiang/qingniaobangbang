@import "../../../wuBaseWxss/1.wxss";

.body .list {
    background: #fff;
}

.body .section {
    height: 58rpx;
    line-height: 58rpx;
    color: #aaa;
    padding-left: 28rpx;
    background: #f0f0f0;
}

.body .radio {
    margin-right: 40rpx;
}

.body .save {
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 10rpx;
    margin: 0 30rpx;
    box-sizing: border-box;
    margin-top: 60rpx;
    background: #06c1ae;
}

.body .delete {
    color: #e76b65;
    margin-top: 60rpx;
    padding: 10rpx 20rpx;
    text-align: center;
    font-size: 32rpx;
}

.body .list .row .value-left,.body .list .row .input {
    width: 70%;
}

.body .list .row textarea {
    padding: 16rpx 0;
    line-height: 36rpx;
    font-size: 30rpx;
    margin-top: 16rpx;
}

.body .list .row-addr {
    height: auto;
}