page {
    height: 100%;
}

.body {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.body icon {
    margin-bottom: 30rpx;
}

.body text {
    font-size: 36rpx;
    color: #ff9800;
    margin-bottom: 40rpx;
}

.body view {
    margin-bottom: 120rpx;
    font-size: 30rpx;
    width: 80%;
    text-align: center;
    color: #666;
}

.body .button {
    width: 60%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 36rpx;
}