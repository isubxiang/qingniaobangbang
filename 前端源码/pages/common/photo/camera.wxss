page {
    height: 100%;
    background: #000;
}

camera,.cover,.cover .region {
    height: 100%;
    width: 100%;
}

.cover .region .mask {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
}

.cover .region .side {
    background: #000;
    flex: 1;
    opacity: 1;
}

.cover .region .placeholder {
    opacity: 0;
}

.cover .region-photo .side {
    opacity: 0.3;
}

.cover .region .img {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 1;
}

.cover .region .img .reg {
    opacity: 0.8;
}

.cover .region .img .res {
    height: 100%;
}

.cover .tools {
    position: fixed;
    z-index: 3;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 40rpx 40rpx;
}

.cover .tools .switch {
    width: 80rpx;
    height: 80rpx;
    opacity: 0.5;
}

.cover .controls {
    position: fixed;
    z-index: 3;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 60rpx;
}

.cover .controls-photo {
    justify-content: center;
}

.cover .controls .photo {
    border-radius: 50%;
    width: 150rpx;
    height: 150rpx;
    background: #fff;
    opacity: 0.5;
    position: relative;
}

.cover .controls .photo cover-view {
    border: 2rpx solid #333;
    border-radius: 50%;
    position: absolute;
    left: 16rpx;
    top: 16rpx;
    right: 16rpx;
    bottom: 16rpx;
}

.cover .controls .btn {
    color: #3aabea;
    font-size: 36rpx;
    padding: 20rpx 30rpx;
}