@import "../list/my/index.wxss";

@import "../list/my/buy/index.wxss";

.list-filter-mask {
    top: 0;
}

.list-filter-box {
    top: 0;
}

.list-filter-mode {
    margin-top: 10px;
}

page {
    background-color: #f0f0f0;
}

.header {
    overflow: hidden;
    border-bottom: 5px solid #f0f0f0;
    height: initial;
}

.header-bg {
    background: #3bbb8d;
}

.header-bg .balance {
    display: flex;
    justify-content: center;
    padding: 10px;
    align-items: center;
    font-size: 84rpx;
    color: #fff;
    font-weight: 700;
}

.bal-show {
    width: 26px;
    height: 26px;
}

.bal-head-money {
    margin: 0 10px;
}

.header-bg .balance .more {
    color: rgba(255,255,255,.8);
    font-size: 26rpx;
    font-weight: 400;
    width: 100rpx;
    text-align: center;
    height: 44rpx;
    line-height: 44rpx;
    border: 1rpx solid rgb(115,228,200);
    border-radius: 8rpx;
}

.header-bg .balance .more text {
    font-size: 20rpx;
    margin-left: 8rpx;
}

.header-bg .month {
    margin-top: 20rpx;
    z-index: 2;
    background: #fff;
    padding: 30rpx;
    display: flex;
}

.header-bg .month .item {
    flex: 1;
    text-align: center;
}

.header-bg .month .item view {
    color: #aaa;
    font-size: 24rpx;
    margin-bottom: 10rpx;
}

.header-bg .month .item text {
    font-size: 32rpx;
}

.header-bg .month .outgo {
    border-right: 1px solid #f0f0f0;
}

.header-bg .month navigator {
    position: absolute;
    z-index: 3;
    right: 10rpx;
    top: -80rpx;
    color: rgba(255,255,255,0.6);
    font-size: 26rpx;
}

.header-bg .month navigator text {
    font-size: 20rpx;
    margin-left: 8rpx;
}

.body {
    background-color: #fff;
}

.body .item-dot {
    width: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin: auto;
}

.body .item-dot text {
    width: 18rpx;
    height: 18rpx;
    border-radius: 9rpx;
    display: block;
}

.body .first {
    margin-top: 100rpx;
}

.body .first text {
    background: #3bbb8d;
}

.body .last {
    margin-bottom: 80rpx;
}

.body .last text {
    background: #aaa;
    font-size: 26rpx;
}

.body .last view {
    position: absolute;
    z-index: 2;
    margin-top: 40rpx;
    color: #aaa;
    width: 180rpx;
    text-align: center;
    left: -45rpx;
    font-size: 26rpx;
}

.body .line {
    height: 60rpx;
    width: 0;
    border-left: 1rpx solid #3bbb8d;
}

.active-box {
    background-color: #3bbb8d;
}

.cat-item {
    color: rgb(156,156,156);
}

.cat-item.active {
    color: #fff;
}

.body .item .detail-in view {
    flex-direction: row-reverse;
}

.money {
    font-size: 12px;
}

.money-out {
    color: #3aabea;
}

.money-in {
    color: #ff9800;
}

.body .item {
    display: flex;
    padding: 20rpx 40rpx;
}

.body .item .empty {
    text-align: center;
    padding: 20rpx 0;
    color: #888;
    width: 100%;
    font-size: 30rpx;
}

.body .item .left {
    flex: 1;
    color: #aaa;
    font-size: 26rpx;
}

.body .item .name {
    font-size: 28rpx;
    line-height: 48rpx;
    color: #222;
    margin-bottom: 8rpx;
}

.body .item .money {
    text-align: center;
    font-size: 40rpx;
    width: 120rpx;
    margin-top: 18rpx;
}

.hr {
    margin-left: 28rpx;
    height: 0;
    border-top: 1rpx solid #f0f0f0;
}

.bal-bj {
    background-color: #fff;
    padding: 10px;
}

.bal-type {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 0;
    background-color: #f7f7f7;
}

.bal-type-text {
    font-size: 12px;
    color: #888;
}

.bal-more {
    width: 16px;
    height: 16px;
}

.bal-time {
    display: flex;
    align-items: center;
    font-family: Arial,Helvetica,sans-serif;
}

.bal-time-text {
    color: #555;
    font-size: 14px;
}

.bal-money {
    width: 100%;
}

.bal-money-more {
    min-width: 80px;
    justify-content: center;
    border-left: solid 1rpx #e0e0e0;
}