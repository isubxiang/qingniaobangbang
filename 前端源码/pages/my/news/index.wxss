@import "../../../wuBaseWxss/7.wxss";

@import "../../list/my/buy/index.wxss";

page {
    background-color: #FFF;
}

.set-head {
    padding: 5px 0px 5px 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
}

.set-head-text {
    font-size: 30rpx;
}

.set-note {
    background-color: #f1f1f1;
    padding: 10px;
    font-size: 12px;
    color: #3bbb8d;
}

.set-title {
    margin: 10px 0 0 10px;
    border-left: solid 3px #3bbb8d;
    height: 14px;
    line-height: 11px;
}

.set-change {
    display: flex;
    flex-flow: wrap;
    background-color: #fff;
}

.set-change-box {
    padding: 15px 10px;
    width: 33.33%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    border-bottom: solid 1rpx #f1f1f1;
}

.set-change-text {
    font-size: 12px;
    color: rgb(139,139,139);
    margin-left: 8px;
}

.set-active {
    background-color: #f1f1f1;
}

.border-none {
    border: none;
}

.step {
    padding: 20px;
}

.step-title {
    display: flex;
    align-items: center;
}

.step-nunber {
    width: 30px;
    line-height: 30px;
    text-align: center;
    color: #fff;
    border-radius: 50%;
    background-color: #3bbb8d;
}

.step-text {
    margin-left: 10px;
    color: rgb(90,90,90);
    font-size: 16px;
}

.step-box {
    border-left: dashed 2px #3bbb8d;
    padding: 10px;
    margin: 5px 0 5px 14px;
}

.step-img {
    width: 160px;
    height: 160px;
}

.step-pro {
    margin-top: 20px;
    text-align: center;
    font-size: 14px;
}

.set-padding {
    padding-top: 4px;
}

.set-btn {
    height: 36px;
    line-height: 36px;
    padding: 0 20px;
    font-size: 14px;
    background-color: #ffa033!important;
    margin-left: 10px;
}

.setp-href {
    text-decoration: underline;
    margin-bottom: 20px;
}

.step-ts {
    margin: 0 0 20px;
    color: #ffa033;
    padding-left: 5px;
    font-size: 14px;
}

.btn-color {
    color: #ffa033;
}

.set-font {
    font-size: 20px;
    margin: 0 5px;
    font-weight: bold;
}

.set-btn-bc {
    width: 140px;
    background-color: #3bbb8d!important;
    height: 32px;
    line-height: 32px;
}

.set-title-text {
    margin-left: 8px;
    font-size: 14px;
    font-weight: bold;
    color: rgb(138,138,138);
}