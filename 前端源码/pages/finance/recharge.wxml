<view class="page">
    <view class="weui-cells__title">{{agentDesc}}</view>
    <form bindsubmit="onFormSubmit" reportSubmit="true">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input font-size">
                <view class="weui-cell__hd">
                    <view class="weui-label">充值金额</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="recharge" placeholder="建议充值10元以上金额" type="digit"></input>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" formType="submit" type="primary">
                {{rechargeText}}
            </button>
        </view>
    </form>
</view>
