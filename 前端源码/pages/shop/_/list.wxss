@import "../../../wuBaseWxss/1.wxss";



.searchBox {
    margin: 12rpx 20rpx 0;
}

.searchBox {
    margin: 20rpx;
    box-sizing: border-box;
    height: 64rpx;
    border-radius: 8rpx;
    background: #EDEDED;
    padding-left: 66rpx;
    position: relative;
}

.searchBox .ico_search {
    width: 22rpx;
    height: 22rpx;
    position: absolute;
    left: 24rpx;
    top: 50%;
    transform: translate(0,-50%);
}

.searchBox input {
    width: 100%;
    height: 64rpx;
    font-size: 28rpx;
    color: #999;
}

.searchBox_fixed {
    position: fixed;
    z-index: 20;
    left: 0;
    top: 0;
    right: 0;
    background: #fff;
}

.searchWord {
    padding: 0 0 10rpx;
    margin: 0 20rpx;
    overflow-x: auto;
    overflow-y: hidden;
    height: 62rpx;
    box-sizing: border-box;
}

.searchWord ul {
    display: block;
    white-space: nowrap;
}

.searchWord ul li {
    display: inline-block;
    font-size: 30rpx;
    color: #666;
    line-height: 40rpx;
    margin-right: 32rpx;
}



.header-top {
    align-items: center;
    background: #06c1ae;
    height: 80rpx;
    padding: 0 20rpx;
    position: relative;
}

.header-top .query {
    height: 56rpx;
    line-height: 56rpx;
    text-align: left;
    font-size: 28rpx;
    border-radius: 28rpx;
    color: #bbb;
    background: #fff;
    padding-left: 56rpx;
    width: 70%;
    float: left;
}

.header-top .query-search {
    height: 56rpx;
    line-height: 56rpx;
    text-align:center;
    width: 20%;
    color: #bbb;
    background: #fff;
    float: right;
    border-radius:10rpx;
}

.header-top .iconfont {
    margin-right: 8rpx;
    position: absolute;
    z-index: 2;
    top: 5rpx;
    left: 36rpx;
    color: #aaa;
}

.body {
    background: #fff;
}

.body-top .section {
    padding: 20rpx 24rpx;
}

.body-top .section .name {
    font-size: 26rpx;
    margin-bottom: 24rpx;
    color: #aaa;
}

.body-top .section .words {
    color: #aaa;
    line-height: 70rpx;
}

.body-top .section text {
    border: 1rpx solid #ddd;
    font-size: 24rpx;
    padding: 0 20rpx;
    margin-right: 10rpx;
    display: inline-block;
    height: 50rpx;
    line-height: 50rpx;
}

.body-top .history {
    border-top: 1rpx solid #f0f0f0;
}

.body-list .item {
    display: flex;
    border-top: 1px solid #f0f0f0;
    padding: 30rpx;
    position: relative;
}

.body-list .actived {
  background: #ffe9e9;
}


.body-list .item navigator {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 2;
}

.body-list .logo {
    width: 160rpx;
    height: 160rpx;
    margin-right: 30rpx;
    background: #bbb;
}

.body-list .name {
    font-size: 28rpx;
}

.body-list .grade {
    margin: 6rpx 0;
}

.body-list .left {
    font-size: 24rpx;
    color: #aaa;
}

.body-list .score {
    color: #ff9800;
}

.body-list .IsClosed {
    margin-left: 10rpx;
    background: #ff9800;
    color: #fff;
    padding: 0rpx 5rpx;
}


.body-list .score .iconfont {
    font-size: 22rpx;
}

.body-list .score .value {
    margin-left: 6rpx;
    margin-right: 16rpx;
}

.body-list .desc {
    font-size: 24rpx;
    color: #666;
}

.body-list .promotions {
    font-size: 24rpx;
    color: #666;
    padding-top: 16rpx;
}

.body-list .promotions view {
    padding: 6rpx 0;
}

.body-list .promotions text {
    background: #ff9800;
    color: #fff;
    width: 32rpx;
    height: 32rpx;
    display: inline-block;
    text-align: center;
    line-height: 32rpx;
    margin-right: 6rpx;
}

.classify {
    width: 100%;
    background: #fff;
    margin-top: 15rpx;
}

.classify swiper-item {
    width: 100%;
    height: 1005;
}

.classify swiper-item view {
    width: 25%;
    height: 150rpx;
    float: left;
}

.classify swiper-item view .classify_logo {
    width: 100%;
    height: 100rpx;
}

.classify swiper-item view .classify_logo image {
    width: 75rpx;
    height: 75rpx;
    background: #fff;
}

.classify swiper-item view .classify_name {
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 28rpx;
    color: #666;
}

.ad {
    margin: 12rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
    overflow: hidden;
}

.tctt {
    margin-left: 30rpx;
    font-weight: bolder;
    font-size: 30rpx;
}

.ad-icon {
    line-height: 64rpx;
    margin-top: 15rpx;
    margin-left: 30rpx;
    float: left;
    height: 35rpx;
    width: 40rpx;
}

.adinfo {
    font-size: 26rpx;
    width: 100%;
}

.adinfo rich-text {
    width: 100%;
}

.nav_index_text {
    margin-top: 15rpx;
    font-size: 24rpx;
}
.actived{ color: #ff0000 !important}