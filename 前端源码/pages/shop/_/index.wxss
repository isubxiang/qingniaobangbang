@import "../../../wuBaseWxss/1.wxss";

::-webkit-scrollbar {
    width: 0;
    color: transparent;
}

page {
    height: 100%;
}

.adjuster {
    display: flex;
}

.adjuster .quantity {
    text-align: center;
    color: #222;
    font-size: 30rpx;
    line-height: 50rpx;
    display: block;
    width: 60rpx;
}

.adjuster view {
    width: 48rpx;
}

.adjuster view text {
    color: #06c1ae;
    font-size: 48rpx;
}

.header {
    background: #06c1ae;
}

.header .query {
    padding: 0 30rpx 20rpx 30rpx;
}

.header .query button {
    border-radius: 24rpx;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 46rpx;
    background: #fff;
    color: #444;
    opacity: 0.3;
    padding: 0 18rpx;
}

.header .query .iconfont {
    position: relative;
    top: 2rpx;
    margin-right: 4rpx;
}

.header .shop-list,.header .shop-single {
    border-bottom: 1rpx solid #f0f0f0;
}

.header scroll-view {
    height: 170rpx;
    width: 100;
}

.header scroll-view .shops {
    padding: 0 30rpx;
    display: flex;
    height: 100%;
}

.header .shops .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 164rpx;
    height: 100%;
    box-sizing: border-box;
    position: relative;
}

.header .shops .item .logo {
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
}

.header .shops .item text.closing {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    line-height: 100rpx;
    z-index: 1;
    top: 0;
    left: 32rpx;
    text-align: center;
    color: #fff;
}

.header .shops .item image.closing {
    opacity: 0.3;
}

.header .shops .item .name {
    font-size: 26rpx;
    color: #fff;
    margin-bottom: 8rpx;
    opacity: 0.8;
}

.header .shops .more view {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.header .shops .more .dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #fff;
    position: relative;
}

.header .shops .more .dot::before,.header .shops .more .dot::after {
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #fff;
    display: block;
    top: 0;
    position: absolute;
}

.header .shops .more .dot::before {
    left: -24rpx;
}

.header .shops .more .dot::after {
    left: 24rpx;
}

.header .shops .actived .line {
    height: 4rpx;
    width: 90rpx;
    background: #fff;
}

.header .shops .actived .name {
    opacity: 1;
}

.header .shop-single {
    display: flex;
    padding: 0 24rpx 24rpx 24rpx;
}

.header .shop-single .logo {
    width: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
    background: #fff;
    border: 1rpx solid #ddd;
}

.header .shop-single .info {
    flex: 1;
    color: #fff;
}

.header .shop-single .name {
    font-size: 36rpx;
}

.header .shop-single .desc {
    opacity: 0.6;
    margin-top: 6rpx;
    margin-bottom: 4rpx;
    font-size: 24rpx;
}

.header .shop-single .desc .line {
    margin: 0 20rpx;
    font-size: 20rpx;
}

.header .intro {
    width: 100%;
    height: 100%;
}

.body {
    flex: 1;
    display: flex;
}

.body .menu {
    width: 166rpx;
    background: #fff;
    height: 100%;
}

.body .menu .bd::before {
    content: '';
    width: 1rpx;
    border-right: 2rpx solid #e3e3e3;
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    display: block;
    z-index: 1;
}

.body .menu .bd .item {
    padding: 30rpx 24rpx;
    line-height: 28rpx;
    border-bottom: 1rpx solid #e3e3e3;
    background: #f0f0f0;
    position: relative;
    z-index: 2;
    margin-right: 2rpx;
}

.body .menu .bd .item.actived {
    background: #fff;
    border-right-color: transparent;
    margin-right: 0;
}

.body .menu .bd .item .iconfont {
    font-size: 30rpx;
    margin-right: 10rpx;
    opacity: 0.8;
}

.body .menu .bd .item .num {
    position: absolute;
    background: #ff9800;
    border-radius: 16rpx;
    height: 32rpx;
    line-height: 32rpx;
    right: 4rpx;
    top: 4rpx;
    display: inline-block;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    padding: 0 8rpx;
    min-width: 16rpx;
}

.body .list {
    flex: 1;
    height: 100%;
    background: #fff;
}

.body .list .item {
    padding: 24rpx;
    display: flex;
    border-bottom: 1rpx solid #f0f0f0;
}

.body .list .img {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border: 1rpx solid #ddd;
}

.body .list .info {
    flex: 1;
}

.body .list .info .name {
    font-size: 30rpx;
}

.body .list .info .desc {
    color: #888;
    font-size: 26rpx;
}

.body .list .info .stat {
    color: #aaa;
    font-size: 24rpx;
    margin-top: 8rpx;
}

.body .list .info .stat text {
    margin-right: 16rpx;
}

.body .list .info .price {
    display: flex;
    margin-top: 8rpx;
}

.body .list .info .price .nums {
    flex: 1;
}

.body .list .info .price .money {
    color: #ff9800;
    font-size: 36rpx;
}

.body .list .info .price .delete {
    color: #999;
    font-size: 24rpx;
    text-decoration: line-through;
    margin-left: 20rpx;
}

.body .list .empty {
    display: flex;
    padding: 20rpx 0;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    color: #aaa;
    background: #f7f7f7;
    font-size: 24rpx;
}

.body .list .empty .iconfont {
    font-size: 30rpx;
    margin-right: 10rpx;
}

.footer {
    height: 120rpx;
    background: #222;
    color: #fff;
    width: 100%;
}

.footer .cart {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    position: absolute;
    left: 30rpx;
    bottom: 8rpx;
    background: #06c1ae;
    z-index: 3;
}

.footer .cart .num {
    position: absolute;
    background: #ff9800;
    border-radius: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    right: -10rpx;
    top: -10rpx;
    display: inline-block;
    min-width: 20rpx;
    text-align: center;
    padding: 0 10rpx;
}

.footer .cart .iconfont {
    font-size: 60rpx;
    line-height: 104rpx;
    display: block;
    height: 100%;
    text-align: center;
}

.footer .notice {
    position: absolute;
    left: 0;
    top: -60rpx;
    height: 60rpx;
    background: rgba(255,240,218,0.9);
    width: 100%;
    z-index: 2;
    text-align: center;
    color: #666;
    line-height: 60rpx;
}

.footer .payment {
    padding-left: 160rpx;
    display: flex;
    height: 100%;
}

.footer .payment .price {
    flex: 1;
    padding-top: 4rpx;
}

.footer .payment view.money {
    font-size: 42rpx;
}

.footer .payment .desc {
    opacity: 0.6;
    font-size: 26rpx;
}

.footer .payment .desc text {
    margin-right: 6rpx;
}

.footer .payment .submit {
    width: 200rpx;
    line-height: 120rpx;
    height: 100%;
    background: #06c1ae;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
}

.footer .payment .submit[disabled] {
    background: #aaa;
    color: #ddd;
}

.popup-cart .top {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    border-bottom: 1rpx solid #f0f0f0;
    height: 78rpx;
    line-height: 78rpx;
    padding: 0 40rpx;
    color: #888;
}

.popup-cart .top .clear {
    color: #3aabea;
}

.popup-cart .item {
    display: flex;
    padding: 30rpx;
}

.popup-cart .item .name {
    flex: 1;
    font-size: 30rpx;
    overflow: hidden;
}

.popup-cart .item .off {
    text-decoration: line-through;
    color: #aaa;
}

.popup-cart .item .offsale {
    font-size: 12px;
    color: #ff9800;
}

.popup-cart .item .money {
    width: 140rpx;
    padding-left: 20rpx;
}

.popup-cart .empty {
    display: flex;
    width: 100%;
    margin-top: 40rpx;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #aaa;
    font-size: 24rpx;
}

.dialog-more {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.dialog-more .item-b {
    margin-top: 50rpx;
}

.dialog-more .caption {
    font-size: 36rpx;
    color: #06c1ae;
    border-left: 8rpx solid #06c1ae;
    padding-left: 30rpx;
}

.dialog-more .desc {
    color: #666;
    font-size: 30rpx;
    line-height: 50rpx;
    margin-top: 18rpx;
}

.dialog-more navigator,.dialog-more button {
    display: inline;
    margin: 0;
    margin-right: 4rpx;
    width: auto;
    height: auto;
    padding: 0;
    color: #3aabea;
    font-size: 30rpx;
    border: 0;
}