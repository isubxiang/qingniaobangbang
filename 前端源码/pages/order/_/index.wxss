@import "../../../wuBaseWxss/1.wxss";

.header {
    display: flex;
    border-bottom: 1rpx solid #ddd;
    background: #fff;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 2;
}

.header view {
    flex: 1;
    text-align: center;
    font-size: 32rpx;
    color: #666;
    height: 90rpx;
    line-height: 90rpx;
}

.header view.actived {
    color: #06c1ae;
}

.header .line {
    position: absolute;
    z-index: 2;
    bottom: -1rpx;
    left: 0;
    height: 6rpx;
    text-align: center;
}

.header .line text {
    display: inline-block;
    width: 80rpx;
    height: 6rpx;
    background: #06c1ae;
    font-size: 1rpx;
    vertical-align: top;
}

.body {
    background: #fff;
}

.section-header {
    background: #f0f0f0;
    line-height: 60rpx;
    font-size: 24rpx;
    padding-left: 30rpx;
    color: #aaa;
}

.section {
    display: flex;
    padding: 30rpx;
}

.section .avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    background: #ddd;
    margin-right: 20rpx;
}

.section .info {
    color: #aaa;
    flex: 1;
}

.section .info .shop {
    display: flex;
    padding: 10rpx;
    margin: 10rpx 0 20rpx 0;
    background: #f7f7f7;
    position: relative;
}

.section .info .shop .serial {
    position: absolute;
    left: -120rpx;
    width: 110rpx;
    text-align: center;
    padding-top: 30rpx;
}

.section .info .shop .serial .code {
    font-size: 30rpx;
    color: #222;
}

.section .info .shop .serial .code text {
    font-size: 45rpx;
    margin-left: 4rpx;
}

.section .info .shop .serial .advance {
    font-size: 24rpx;
    color: #888;
}

.section .info .shop .items {
    flex: 1;
}

.section .info .shop .items .item {
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx;
    white-space: nowrap;
    color: #666;
}

.section .info .shop image {
    width: 80rpx;
    height: 80rpx;
    background: #ddd;
    border: 1rpx solid #ddd;
}

.section .info .shop-info {
    flex: 1;
    font-size: 24rpx;
    color: #aaa;
    margin-left: 18rpx;
}

.section .info .shop .cost {
    display: flex;
    justify-content: space-between;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #222;
}

.section .info .shop .cost .name {
    padding-bottom: 8rpx;
    display: block;
}

.section .info .shop .cost .money {
    color: #666;
}

.section .info .shop .ellipsis {
    height: 30rpx;
    white-space: normal;
}

.section .info .caption {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #666;
    display: flex;
    justify-content: space-around;
}

.section .info .caption .user {
    flex: 1;
}

.section .info .caption .type {
    color: #fff;
    background: #ddd;
    font-size: 24rpx;
    padding: 2rpx 10rpx;
    border-radius: 4rpx;
    margin-left: 10rpx;
    display: inline-block;
}

.section .info .caption .status {
    color: #666;
}

.section .info .caption .status-ready {
    color: #ff9800;
}

.section .info .caption .status-cancel {
    color: #aaa;
}

.section .info .remark {
    color: #222;
    margin: 10rpx 0;
    font-size: 30rpx;
    max-height: 84rpx;
    overflow: hidden;
}

.section .info .remark .attr-name {
    font-size: 26rpx;
    color: #ff9800;
    margin-left: 10rpx;
}


.section .info .props {
    font-size: 24rpx;
    display: flex;
    position: relative;
}

.section .info .props .money {
    color: #ff9800;
    margin-left: 6rpx;
    font-size: 38rpx;
    font-weight:300;
}

.section .info .props .time {
    margin-left: 20rpx;
    padding-top: 6rpx;
}

.section .info .props .btn {
    border: 1rpx solid #06c1ae;
    height: 58rpx;
    line-height: 58rpx;
    font-size: 28rpx;
    padding: 0 18rpx;
    border-radius: 10rpx;
    text-align: center;
    background: #fff;
    color: #06c1ae;
    position: absolute;
    right: 0;
    bottom: -4rpx;
}

.section-top {
    display: flex;
    padding: 20rpx 30rpx;
    line-height: 70rpx;
}

.section-top .shop {
    display: flex;
}

.section-top .shop .logo {
    width: 70rpx;
    height: 70rpx;
    background: #ddd;
    margin-right: 10rpx;
}

.section-top .shop name {
    font-weight: 700;
}

.section-top .shop .iconfont {
    color: #aaa;
    padding: 0 10rpx;
}

.section-top .status {
    flex: 1;
    text-align: right;
    color: #666;
}

.section .detail {
    margin: 0 20rpx;
    background: #f7f7f7;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
    line-height: 48rpx;
    font-size: 26rpx;
}

.section .detail view {
    display: flex;
}

.section .detail .name {
    flex: 1;
}

.section .detail .quantity {
    text-align: right;
}

.section .detail .sum {
    color: #aaa;
    display: flex;
    justify-content: flex-end;
}

.section-bottom {
    text-align: right;
    height: 80rpx;
    line-height: 80rpx;
    padding: 10rpx 0;
}

.section-bottom navigator {
    padding: 10rpx 28rpx;
    border: 1rpx solid #ddd;
    text-align: right;
    display: inline;
    margin-right: 20rpx;
}

.empty {
    display: flex;
    position: fixed;
    left: 0;
    top: 92rpx;
    z-index: 5;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #aaa;
}

.empty .iconfont {
    font-size: 120rpx;
    margin-top: -40rpx;
    margin-bottom: 40rpx;
}