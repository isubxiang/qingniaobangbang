@import "../../../wuBaseWxss/1.wxss";

.page-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    opacity: 0.01;
    z-index: 1;
}

.header {
    background: #fff;
}

.header-top {
    background: #06c1ae;
    display: flex;
    justify-content: center;
}

.header .type {
    padding-bottom: 20rpx;
    text-align: center;
}

.header .type .content {
    font-size: 36rpx;
    color: #fff;
}

.header .type .iconfont {
    font-size: 30rpx;
    color: #fff;
    margin-left: 6rpx;
    opacity: 0.8;
}

.header .type .caption {
    color: #fff;
    font-size: 24rpx;
    opacity: 0.5;
}

.header .input {
    margin: 40rpx;
}

.header .input textarea {
    font-size: 34rpx;
    height: 200rpx;
    width: 100%;
}

.header .advance {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    padding-left: 40rpx;
    font-size: 26rpx;
}

.header .advance .caption {
    flex: 1;
    height: 80rpx;
    color: #666;
}

.header .advance .caption .iconfont {
    margin-right: 8rpx;
    font-size: 26rpx;
}

.header .advance .text {
    color: #aaa;
}

.header .advance .money {
    color: #ff9800;
}

.header .advance .arrow {
    width: 60rpx;
    color: #aaa;
    display: block;
    font-size: 22rpx;
    text-align: center;
}

.body {
    padding-bottom: 110rpx;
}

.body .section {
    background: #fff;
    margin-top: 20rpx;
}

.body .section .row {
    display: flex;
    padding-left: 40rpx;
}

.body .section .arrow {
    width: 60rpx;
    height: 100%;
    color: #aaa;
    display: block;
    font-size: 22rpx;
    text-align: center;
}

.body .date picker {
    flex: 1;
}

.body .date .picker {
    width: 100%;
    display: flex;
}

.body .date .picker .text {
    flex: 1;
}

.body .address .row {
    line-height: 60rpx;
    padding: 20rpx 0;
    align-items: center;
}

.body .address .addr {
    padding-left: 20rpx;
    position: relative;
}

.body .address .icon {
    height: 100%;
    padding-right: 20rpx;
    padding-left: 20rpx;
    color: #06c1ae;
}

.body .address .icon .iconfont {
    font-weight: 700;
}

.body .address .icon .dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    display: inline-block;
    background: #06c1ae;
}

.body .address .to .icon .dot {
    background: #ff9800;
}

.body .address .content {
    font-size: 30rpx;
    height: 100%;
    flex: 1;
    color: #aaa;
}

.body .address .date {
    padding-left: 40rpx;
}

.body .address .date picker {
    color: #222;
    font-size: 30rpx;
}

.body .address .date .content text {
    color: #3aabea;
}

.body .address .addr-data .content {
    display: flex;
    flex-direction: column;
    line-height: 60rpx;
}

.body .address .addr-data .content text.name {
    display: block;
    color: #222;
}

.body .address .addr-data .content text.desc {
    display: block;
    font-size: 28rpx;
    line-height: 1;
    margin-bottom: 10rpx;
}

.body .address .addr-data .content text.desc text {
    margin-left: 10rpx;
}

.body .prop .row {
    line-height: 90rpx;
    height: 90rpx;
}

.body .prop .caption {
    font-size: 28rpx;
}

.body .prop .row-attr {
    height:auto;
    padding: 20rpx 30rpx;
}

.body .prop .row-attr .caption-bixuan {
  margin-left: 10rpx;
  color: #f56e1d;
}

.body .prop .caption-attr{
    font-size: 28rpx;
    padding: 10rpx;
    margin: 10rpx;
    border-radius: 5rpx;
    border: 1rpx solid #e5dfd4;
}

.body .prop .actived {
    font-size: 28rpx;
    border: 1rpx solid #06c1ae; 
    background:#06c1ae;
    color: #fff;
    border-radius: 5rpx;
    padding: 10rpx;
    margin: 10rpx;
}



.body .prop .caption-attr .iconfont-attr{
    margin-right: 10rpx;
    float: right;
}



.body .prop .text {
    flex: 1;
    color: #aaa;
    text-align: right;
}

.body .prop .text-value {
    color: #222;
}

.body .prop .freight .text .money {
    color: #ff9800;
    margin-left: 8rpx;
    font-size: 36rpx;
}

.body .prop .caption .special {
    background: #06c1ae;
    color: #fff;
    padding: 1rpx 8rpx;
    border-radius: 6rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.body .prop .delivery {
    padding: 30rpx 40rpx 90rpx 40rpx;
    display: flex;
    justify-content: space-between;
}

.body .prop .delivery .radio-group {
    display: flex;
    flex: 1;
    justify-content: flex-end;
}

.body .prop .delivery label {
    position: relative;
    margin-left: 40rpx;
}

.body .prop .delivery label.disabled radio {
    display: none;
}

.body .prop .delivery label.disabled::before {
    content: ' ';
    display: inline-block;
    width: 45rpx;
    height: 45rpx;
    border: 1rpx solid #ddd;
    background: #f0f0f0;
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 10rpx;
}

.body .prop .delivery .desc {
    background: #fffbe7;
    border-radius: 12rpx;
    color: #c5b8a0;
    border: 1px solid #e5dfd4;
    position: absolute;
    right: 0;
    bottom: -68rpx;
    text-align: center;
    width: 426rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    opacity: 0.6;
}

.body .prop .delivery .desc-checked {
    opacity: 1;
}

.body .prop .delivery .desc::before {
    background: #fffbe7;
    border-top: 1px solid #e5dfd4;
    border-left: 1px solid #e5dfd4;
    transform: rotate(45deg);
    display: block;
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    right: 60rpx;
    top: -10rpx;
    content: "";
}

.body .prop .expired .font-blue {
    margin: 0 2px;
}

.body .agree {
    padding: 30rpx 40rpx;
    color: #aaa;
    font-size: 26rpx;
}

.body .agree .iconfont {
    color: #06c1ae;
    margin-right: 10rpx;
}

.body .agree .contract {
    color: #666;
    display: inline;
}

.footer {
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    box-shadow: 0 -2rpx 2rpx #f0f0f0;
    display: flex;
}

.footer .left {
    flex: 1;
    padding-right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.footer .payment {
    font-size: 30rpx;
}

.footer .payment .money {
    margin-left: 18rpx;
    color: #ff9800;
    font-size: 46rpx;
}

.footer .desc {
    font-size: 24rpx;
    color: #aaa;
}

.footer button {
    width: 240rpx;
    height: 100%;
    line-height: 110rpx;
    text-align: center;
    background: #06c1ae;
    font-size: 36rpx;
    color: #fff;
}

.popup {
    padding: 40rpx 30rpx;
    display: flex;
    flex-direction: column;
}

.popup-money {
    text-align: center;
    color: #666;
    font-size: 30rpx;
}

.popup-money .input {
    flex: 1;
    border: 1rpx solid #ff9800;
    height: 78rpx;
    line-height: 76rpx;
    border-radius: 6rpx;
    text-align: center;
    font-size: 32rpx;
    color: #ff9800;
    margin: 30rpx 0;
    display: flex;
    justify-content: center;
}

.popup-money .input .symbol {
    display: inline;
}

.popup-money .input input {
    width: 100rpx;
    height: 76rpx;
    border: 0;
    text-align: left;
    margin-left: 10rpx;
}

.popup-money .desc {
    font-size: 24rpx;
    color: #aaa;
}

.popup-slider {
    align-items: center;
}

.popup-slider text {
    padding-bottom: 40rpx;
    font-size: 36rpx;
    color: #06c1ae;
}

.popup-slider .slider {
    width: 80%;
    padding-bottom: 20rpx;
}

.popup-freight .items {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.popup-freight .item {
    width: 30%;
    margin-bottom: 30rpx;
    border: 1rpx solid #ddd;
    height: 78rpx;
    border-radius: 6rpx;
    text-align: center;
    position: relative;
}

.popup-freight .item .upp {
    position: absolute;
    left: 4rpx;
    top: 4rpx;
    font-size: 22rpx;
    color: #c5b8a0;
}

.popup-freight .item .money {
    line-height: 76rpx;
    font-size: 32rpx;
}

.popup-freight .item.disabled {
    opacity: 0.4;
}

.popup-freight .item.actived {
    border: 1rpx solid #ff9800;
    color: #ff9800;
    display: flex;
    justify-content: center;
}

.popup-freight .item-other {
    flex: 1;
    width: auto;
    margin-bottom: 0;
    display: block;
    line-height: 76rpx;
}

.popup-freight .item-other.actived .symbol {
    display: inline;
}

.popup-freight .item-other.actived input {
    width: 100rpx;
    height: 76rpx;
    border: 0;
    text-align: left;
    margin-left: 10rpx;
}


