@import "type.wxss";

.classify {
    width: 100%;
    background: #fff;
}

.classify swiper-item {
    width: 100%;
    height: 100%;
}

.classify swiper-item view {
    width: 20%;
    height: 160rpx;
    float: left;
}

.classify swiper-item view .classify_logo {
    width: 100%;
    height: 110rpx;
}

.classify swiper-item view .classify_logo image {
    width: 75rpx;
    height: 75rpx;
    background: #fff;
    border-radius: 50%;
}

.classify swiper-item view .classify_name {
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 28rpx;
    color: #666;
}

.blbanner {
    background-color: white;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}


.loading {
    width: 100%;
    height: 60rpx;
    background:#f0f0f0;
    color: #999;
    line-height: 60rpx;
    text-align: center;
    font-size: 22rpx;
}
