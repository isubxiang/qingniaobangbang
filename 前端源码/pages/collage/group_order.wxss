@import "../../wuBaseWxss/8.wxss";

@import "../../wuBaseWxss/12.wxss";

page {
    font-family: "微软雅黑";
}

.goods-item {
    border: none;
    padding: 10rpx 0;
}

.goods-item .goods-pic {
    width: 45rpx;
    height: 45rpx;
}

.sfmoney {
    padding: 10rpx 0;
}

.order_head>view {
    width: 50%;
}

.order_head>view image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.shop_info {
    background: #f9f9f9;
}

.shop_info image {
    width: 100%;
    height: 130rpx;
    border-radius: 15rpx;
}

.shop_info>view:nth-child(1) {
    width: 20%;
}

.shop_info>view:nth-child(2) {
    width: 73%;
    margin-left: 2%;
}

.info>view:nth-child(1) {
    width: 30%;
}

.info>view:nth-child(2) {
    width: 70%;
}

.order_info>text {
    padding: 10rpx 30rpx;
    display: inline;
    border-radius: 20rpx;
}

.color_red {
    color: red;
}