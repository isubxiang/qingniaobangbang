@import "../../wuBaseWxss/12.wxss";

.launch image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.shop_info {
    width: 90%;
    height: 200rpx;
    margin: 0 auto 0;
    border: 2rpx solid #e5e5e5;
    border-radius: 10rpx;
    box-sizing: content-box;
}

.shop_list {
    width: 100%;
    height: 100%;
    background: #fff;
}

.shop_list:last-child {
    border: none;
}

.shop_list>view {
    height: 100%;
}

.shop_list image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.shop_list>view:nth-child(1) {
    width: 30%;
}

.shop_list>view:nth-child(2) {
    width: 66%;
    margin-left: 4%;
}

.shop_list>view view:nth-child(1) {
    height: auto;
    min-height: 80rpx;
}

.shop_list>view view:nth-child(2) {
    height: 40rpx;
    margin-top: 10rpx;
    line-height: 40rpx;
}

.shop_list>view view:nth-child(3) {
    height: 40rpx;
    line-height: 40rpx;
}

.color_text {
    color: rgb(209,57,60);
}

.timeBack {
    padding: 8rpx 10rpx;
    background: rgb(52,52,52);
    color: #fff;
    margin-left: 10rpx;
    border-radius: 5rpx;
}

.launchNum>view {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.border_dash {
    border: 4rpx dashed #ccc;
    background: #e5e5e5;
}

.launchNum image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.joinGroup {
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    width: 100%;
    color: #fff;
    margin-top: 50rpx;
    background: rgb(209,57,60);
}

.rule>view:nth-child(1) {
    width: 20%;
}

.rule>view:nth-child(2) {
    width: 15%;
}

.rule>view:nth-child(3) {
    width: 20%;
}

.rule>view:nth-child(4) {
    width: 15%;
}

.rule>view:nth-child(5) {
    width: 30%;
}